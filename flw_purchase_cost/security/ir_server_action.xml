<odoo>
    <record id="server_action_update_product_template" model="ir.actions.server">
        <field name="name">Update product Cost</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="state">code</field>
        <field name="code">
            for product in records:
                product.update({'product_cost': product.standard_price})
        </field>
    </record>
</odoo>