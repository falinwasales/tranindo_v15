<odoo>
    <template id="tranindo_custom_header_footer_voucher_a4">

		<t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>
        
        <t t-call="fal_tranindo_ext.tranindo_external_header_footer_voucher_a4"><t t-raw="0"/></t>
	</template>

    <template id="tranindo_external_header_footer_voucher_a4">
        <div class="header">
            <!--  -->
            <div>
                <p t-field="res_company.name" style="text-align: center;" class="h4 o_bold"/>
            </div>
            <div>
                <p class="h4 o_bold" style="text-align: center; text-transform: uppercase;">
                    <t t-if="doc.payment_voucher_bool">
                        PAYMENT VOUCHER
                    </t> 
                    <t t-else="">
                        RECEIVED VOUCHER
                    </t> 
                </p>
            </div>

            <div class="row">
                <div class="w-50">
                    <div class="row">
                        <div class="" style="width: 40%;">
                            <span style="font-size: 14px;margin-left: 35px;">
                                <t t-if="doc.payment_voucher_bool">
                                    Dibayarkan Kepada
                                </t>
                                <t t-else="">
                                    Diterima Dari
                                </t>    
                            </span>
                        </div>
                        <div style="width: 60%;">
                            <span style="margin-left: 40px; font-size: 14px;">
                                : <span t-field="doc.partner_id.name"></span>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="w-50">
                    <div class="row">
                        <div class="w-25">
                            <span style="font-size: 14px; margin-left: 35px;">
                                No. Voucher
                            </span>
                        </div>
                        <div class="w-75">
                            <span style="margin-left: 40px; font-size: 14px;">
                                : <span t-field="doc.name"></span>
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="w-25">
                            <span style="font-size: 14px; margin-left: 35px;">
                                Tanggal
                            </span>
                        </div>
                        <div class="w-75">
                            <span style="margin-left: 40px; font-size: 14px;">
                                : <span t-field="doc.date"></span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--  -->
        <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <div class="pt-0">
                <t t-call="web.address_layout"/>
            </div>
            <t t-raw="0"/>
        </div>
        <!--  -->
    </template>
</odoo>