<odoo>
    <template id="tranindo_voucher_a4_journal_entries">
        <t t-call="web.html_container">
            <t t-name='tranindo_voucher_a4_journal_entries'>
                <t t-call="fal_tranindo_ext.tranindo_custom_header_footer_voucher_a4">
                    <t t-foreach="docs" t-as="doc">
                        <div class="page">
                            <style>
                                .page-break {
                                    page-break-before: always;
                                }
                            </style>
                            <!--  -->
                            
                            <!-- TABLE FOR RECORD -->
                            <div>
                                <p class="h4 o_bold" style="text-align: center; text-transform: uppercase;">
                                    <t t-foreach="doc" t-as="docs">
                                        <t t-if="docs.payment_voucher_bool">
                                            PAYMENT VOUCHER
                                        </t> 
                                        <t t-else="">
                                            RECEIVED VOUCHER
                                        </t>
                                    </t> 
                                </p>
                            </div>

                            <div class="row" style="margin-top: 15px;">
                                <div class="w-50">
                                    <div class="row">
                                        <div class="" style="width: 40%;">
                                            <span style="font-size: 14px;margin-left: 35px;">
                                                <t t-if="doc.payment_voucher_bool">
                                                    Dibayarkan Kepada
                                                </t>
                                                <t t-else="">
                                                    Diterima Dari
                                                </t>    
                                            </span>
                                        </div>
                                        <div style="width: 60%;">
                                            <span style="margin-left: 40px; font-size: 14px;">
                                                : <span t-field="doc.line_ids[0].partner_id.name"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="w-50">
                                    <div class="row">
                                        <div class="w-25">
                                            <span style="font-size: 14px; margin-left: 35px;">
                                                No. Voucher
                                            </span>
                                        </div>
                                        <div class="w-75">
                                            <span style="margin-left: 40px; font-size: 14px;">
                                                : <span t-field="doc.name"></span>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="w-25">
                                            <span style="font-size: 14px; margin-left: 35px;">
                                                Tanggal
                                            </span>
                                        </div>
                                        <div class="w-75">
                                            <span style="margin-left: 40px; font-size: 14px;">
                                                : <span t-field="doc.date"></span>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <t t-set="total_kredit" t-value="0"/>
                            <div>
                                <table class="table o_report_block_table table-sm">
                                    <thead>
                                        <tr>
                                            <th class="border border-dark" style="width: 400px;">
                                                <span style="font-size: 14px;">
                                                    Akun
                                                </span>
                                            </th>
                                            <th class="border border-dark o_bold text-left" style="width: 250px;">
                                                <span style="font-size: 14px;">
                                                    Keterangan
                                                </span>
                                            </th>
                                            <th class="border border-dark text-left" style="width: 150px;">
                                                <span style="font-size: 14px; margin-right: 30px;">
                                                    Debit
                                                </span>
                                            </th>
                                            <th class="border border-dark" style="width: 150px;">
                                                <span style="font-size: 14px;">
                                                    Kredit
                                                </span>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="doc.line_ids" t-as="line">
                                            <td class="border border-dark" style="width: 400px;">
                                                <span style="font-size: 14px;">
                                                    <span t-field="line.account_id.code"/> - <span t-field="line.account_id.name"/>
                                                </span>
                                            </td>
                                            <td class="border border-dark" style="width: 250px;">
                                                <span style="font-size: 14px;">
                                                    <t t-if="doc.payment_voucher_bool">
                                                        <span t-field="line.name"/> 
                                                    </t>
                                                    <t t-else="">
                                                        <span t-field="doc.ref"/>
                                                    </t>
                                                </span>
                                            </td>
                                            <td class="border border-dark" style="width: 150px;">
                                                <span style="font-size: 14px;">
                                                    <span t-field="line.debit"/>
                                                </span>
                                            </td>
                                            <t t-set="total_kredit" t-value="total_kredit + line.credit"/>
                                            <td class="border border-dark" style="width: 150px;">
                                                <span style="font-size: 14px;">
                                                    <span t-field="line.credit"/>
                                                </span>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>

                                <div class="row">
                                    <div class="w-100">
                                        <span style="margin-left: 79%; font-size: 15px;">
                                            TOTAL : Rp. <span t-esc="total_kredit" t-options='{"widget": "float", "precision": 2}'/>
                                        </span>
                                    </div>
                                </div>

                                <table class="table o_report_block_table table-sm">
                                    <thead class="border border-dark col-12">
                                        <tr>
                                            <th class="border border-dark" style="width: 33.4%">
                                                <span style="font-size: 14px; margin-left: 10px;">
                                                    CASH/GIRO
                                                </span>
                                            </th>
                                            <th class="border border-dark o_bold text-left" style="width: 33.3%">
                                                <span style="font-size: 14px; margin-left: 10px;">
                                                    BANK : <span t-field="doc.journal_id.name"/>
                                                </span>
                                            </th>
                                            <th class="border border-dark text-left" style="width: 33.3%">
                                                <span style="font-size: 14px; margin-left: 10px;">
                                                    NO :
                                                </span>
                                            </th>
                                        </tr>
                                    </thead>
                                </table>

                                <div style="margin-top: 45px; margin-left: 60px;">
                                    <div class="row">
                                        <div class="col-3">
                                            <span>
                                                <strong style="font-size: 14px;">
                                                    Mengetahui
                                                </strong>
                                                <!-- <br/>
                                                <br/>
                                                <br/>
                                                <br/>
                                                <span>
                                                    <hr style="background-color: black; width:70%"/>
                                                </span>
                                                <span>
                                                    <u/>
                                                </span> -->
                                            </span>
                                        </div>
                                        <div class="col-3">
                                            <span>
                                                <strong style="font-size: 14px;">Menyetujui</strong>
                                                <!-- <br/>
                                                <span>
                                                    <br/>
                                                    <br/>
                                                    <br/>
                                                    <span>
                                                        <hr style="background-color: black; width:70%"/>
                                                    </span>
                                                </span> -->
                                            </span>
                                            <br/>
                                            <br/>
                                            <br/>
                                        </div>
                                        <div class="col-3">
                                            <span>
                                                <strong style="font-size: 14px;">Kasir</strong>
                                                <!-- <br/>
                                                <br/>
                                                <br/>
                                                <br/>
                                                <span>
                                                    <hr style="background-color: black; width:70%"/>
                                                </span> -->
                                            </span>
                                        </div>
                                        <div class="col-3">
                                            <span>
                                                <strong style="font-size: 14px;">Pembukuan</strong>
                                                <!-- <br/>
                                                <br/>
                                                <br/>
                                                <br/>
                                                <span>
                                                    <hr style="background-color: black; width:70%"/>
                                                </span> -->
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <p style="page-break-after:always;"/> 
                        </div>
                    </t>
                </t>
            </t>
        </t>
    </template>

    <record id="action_tranindo_voucher_a4_journal_entries" model="ir.actions.report">
        <field name="name">Voucher A4</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">fal_tranindo_ext.tranindo_voucher_a4_journal_entries</field>
        <field name="report_file">fal_tranindo_ext.tranindo_voucher_a4_journal_entries</field>
        <field name="print_report_name">'Voucher A4 - %s' % (object.name)</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
    </record>

    <record id="paperformat_tranindo_voucher_a4_journal_entries" model="report.paperformat">
        <field name="name">Voucher A4</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">12</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">10</field>
        <field name="dpi">90</field>
        <field name="report_ids" eval="[(4, ref('action_tranindo_voucher_a4_journal_entries'))]"/>
    </record>
</odoo>