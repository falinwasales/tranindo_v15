<odoo>
    <template id="tranindo_custom_header_footer_terima_A4">

		<t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>
        
        <t t-call="fal_tranindo_ext.tranindo_external_header_footer_terima_A4"><t t-raw="0"/></t>
	</template>

    <template id="tranindo_external_header_footer_terima_A4">
        <div class='header'> 
            <div class="row">
                <!--  -->
                <div class="col-7">
                    <span/>
                    <span t-field="res_company.name" class="o_bold"/>
                    <br/>
                    <span class="small o_bold"><span t-field="res_company.street" class="o_bold"/></span>
                    <br/>
                </div>
                <!--  -->
                <div class="col-5 text-left" style="margin-bottom: 0px; margin-left: 0px;">
                    <span/>
                    <span class="h4 o_bold">TANDA TERIMA</span>
                </div>
                <!--  -->
            </div>
            
            <hr style="background-color: black; margin-bottom: 0px;"/>
            <div class="row">
                <div class="w-50">
                    <div class="row w-100">
                        <div class="w-25">
                            <span style="font-size:12px; margin-left: 30px;">
                                <b>No. TT</b>
                            </span>
                        </div>
                        <div class="w-75">
                            <span style="font-size:12px; margin-left: 30px;">
                                : <span t-field="doc.name"/>
                            </span>
                        </div>
                    </div>
                    <div class="row w-100">
                        <div class="w-25">
                            <span style="font-size:12px; margin-left: 30px;">
                                <b>Tanggal</b>
                            </span>
                        </div>
                        <div class="w-75">
                            <span style="font-size:12px; margin-left: 30px;">
                                : <span t-esc="doc.tanda_terima_date.strftime('%d %b %Y') if doc.tanda_terima_date else ''"/>
                            </span>
                        </div>
                    </div>
                </div>
                <!--  -->
                <div class="w-50">
                    <div class="row w-100">
                        <div class="w-25">
                            <span style="font-size:12px; margin-left: 30px;">
                                <b>Kepada Yth</b>
                            </span>
                        </div>
                        <div class="w-75">
                            <span style="font-size:12px; margin-left: 30px;">
                                :
                            </span>
                        </div>
                    </div>
                    <div class="row w-100">
                        <div class="w-100">
                            <span style="font-size:12px; margin-left: 30px;">
                                <span class="o_bold" t-field="doc.customer_id.name"/>
                            </span>
                        </div>
                    </div>
                    <div class="row w-100">
                        <div class="" style="margin-left: 30px;">
                            <span style="font-size:12px;">
                                <span class="o_bold" t-esc="doc.customer_street if doc.customer_street else ''"/>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <hr style="background-color: black; margin-bottom: 0px; margin-top:0px;"/>
        </div>
        <!--  -->
        <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <div class="pt-0">
                <t t-call="web.address_layout"/>
            </div>
            <t t-raw="0"/>
        </div>
        <!--  -->
    </template>
</odoo>