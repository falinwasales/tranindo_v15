<odoo>
    <template id="tranindo_custom_header_footer_sj_transfer">

		<t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>
        
        <t t-call="fal_tranindo_ext.tranindo_external_header_footer_sj_transfer"><t t-raw="0"/></t>
	</template>

    <template id="tranindo_external_header_footer_sj_transfer">
        <div class='header' t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style" style="margin-bottom:0px;"> 
            <div class="row">
                <div class="col-2 border border-white">
                    <img t-if="res_company.logo"  t-attf-src="data:image/*;base64,{{res_company.logo}}" style="width:140px;"/>
                </div>
                <!--  -->
                <div class="col-5">
                    <span/>
                    <span t-field="res_company.name" class="o_bold"/>
                    <br/>
                    <span class="small o_bold"><span t-field="res_company.street" class="o_bold"/></span>
                    <br/>
                    <span class="small o_bold">
                        Phone : <span t-field="o.company_id.phone" class="o_bold"/>
                        Fax : <span t-field="o.company_id.fax" class="o_bold"/>
                    </span>
                </div>
                <!--  -->
                <div class="col-5 text-right">
                    <span/>
                    <span class="h4 o_bold">SURAT JALAN</span>
                    <br/>
                    <span class="h7 o_bold">Page : <span class="page"/>/<span class="topage"/></span>
                    <br/>
                    <t t-if="doc.sale_id">
                        <span class="h7 o_bold">Nomor SO : <span t-field="o.sale_id.name"/></span>
                    </t>
                </div>
                <!--  -->
            </div>

            <hr style="background-color: black; margin-bottom: 0px; margin-top: 1px;"/>
            <div class="row">
                <div class="w-50">
                    <div class="row w-100">
                        <div class="w-25">
                            <span style="font-size:14px; margin-left: 30px;">
                                <b>Nomor</b>
                            </span>
                        </div>
                        <div class="w-75">
                            <span style="font-size:14px; margin-left: 30px;">
                                : <span t-field="doc.display_name"/>
                            </span>
                        </div>
                    </div>
                </div>

                <div class="w-50">
                    <div class="row w-100">
                        <div style="width: 65px;">
                            <span style="font-size:14px; margin-left: 20px;">
                                <b>Kepada</b>
                            </span>
                        </div>
                        <div>
                            <span style="font-size:14px; margin-left: 20px;">
                                <b>:</b>
                            </span>
                        </div>
                        <div class="w-75">
                            <span style="font-size:14px; margin-left: 10px;">
                                <t t-if="doc.sale_id.is_final_customer">
                                    <t t-foreach="doc.sale_id" t-as="sale">
                                        <span t-esc="sale.delivery_street.parent_id.name if sale.delivery_street.parent_id else sale.delivery_street.name"/> 
                                        <span t-if="doc.contact_phone_show and sale.delivery_street.phone">
                                            - <span t-esc="sale.delivery_street.phone if sale.delivery_street.phone else ''"/>
                                        </span>
                                    </t>
                                </t>
                                <t t-else="">
                                    <t t-if="doc.sale_id">
                                        <t t-foreach="doc.sale_id" t-as="sale">
                                            <span t-esc="sale.partner_id.parent_id.name if sale.partner_id.parent_id else sale.partner_id.name"/> 
                                            <span t-if="doc.contact_phone_show and sale.partner_id.phone">
                                                - <span t-esc="sale.partner_id.phone if sale.partner_id else ''"/>
                                            </span>
                                        </t>
                                    </t>
                                    <t t-else="">
                                        <span t-esc="doc.partner_id.parent_id.name if doc.partner_id.parent_id else doc.partner_id.name"/> 
                                        <span t-if="doc.contact_phone_show and doc.partner_id.phone">
                                            - <span t-esc="doc.partner_id.phone if doc.partner_id else ''"/>
                                        </span>
                                    </t>
                                </t>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--  -->
        <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <div class="pt-0">
                <t t-call="web.address_layout"/>
            </div>
            <t t-raw="0"/>
        </div>
    </template>
</odoo>