<odoo>
    <template id="tranindo_invoice_letter_c5">
        <t t-call="web.html_container">
            <t t-name='tranindo_invoice_letter_c5'>
                <t t-call="fal_tranindo_ext.tranindo_custom_header_footer_invoice_c5">
                    <t t-foreach="docs" t-as="doc">
                        <div class="page">
                            <style>
                                .page-break {
                                    page-break-after: always;
                                }
                            </style>
                            <!--  -->
                            
                            <!-- TABLE FOR RECORD -->
                            <div class="row">
                                <div class="w-50">
                                    <div class="row w-100">
                                        <div style="width: 80px;">
                                            <span style="font-size:14px; margin-left: 30px;">
                                                <b>No. SJ</b>
                                            </span>
                                        </div>
                                        <div>
                                            <span style="font-size:14px; margin-left: 75px;">
                                                <b>:</b>
                                            </span>
                                        </div>
                                        <div class="w-75">
                                            <div style="margin-left: 0px;">
                                                <span style="font-size:14px; word-break: break-word;">
                                                    <t t-if="doc.pos_order_ids">
                                                        <t t-foreach="doc.pos_order_ids" t-as="pos">
                                                            <span style="font-size:14px;" t-field="pos[0].picking_ids[0].name"/>
                                                        </t>
                                                    </t>
                                                    <t t-else="">
                                                        <span style="font-size:14px;" t-field="doc.fal_stock_picking_id.sale_id.do_container"/>
                                                    </t>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row w-100">
                                        <div style="width: 80px;">
                                            <span style="font-size:14px; margin-left: 30px;">
                                                <b>Tanggal</b>
                                            </span>
                                        </div>
                                        <div>
                                            <span style="font-size:14px; margin-left: 75px;">
                                                <b>:</b>
                                            </span>
                                        </div>
                                        <div class="w-50">
                                            <div style="margin-left: 0px;">
                                                <span style="font-size:14px; word-break: break-word;">
                                                    <span t-esc="doc.invoice_date.strftime('%d/%m/%Y')"/>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row w-100">
                                        <div class="w-25">
                                            <span style="font-size:14px; margin-left: 30px;">
                                                <b>No. Faktur Pajak</b>
                                            </span>
                                        </div>
                                        <div class="w-75">
                                            <span style="font-size:14px; margin-left: 30px;">
                                                <t t-if="doc.replace_faktur">
                                                    : <span t-field="doc.replace_faktur"/>
                                                </t>
                                                <t t-else="">
                                                    : <span t-field="doc.l10n_id_tax_number"/>
                                                </t>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <!--  -->
                                <div class="w-50">
                                    <div class="row w-100">
                                        <div style="width: 65px;">
                                            <span style="font-size:14px; margin-left: 20px;">
                                                <b>Alamat</b>
                                            </span>
                                        </div>
                                        <div>
                                            <span style="font-size:14px; margin-left: 20px;">
                                                <b>:</b>
                                            </span>
                                        </div>
                                        <t t-if="doc.is_delivery_address">
                                            <div class="w-75" style="margin-left: 10px;">
                                                <span style="font-size:14px;">
                                                    <span t-esc="doc.partner_shipping_id.street if doc.partner_shipping_id else ''"/>
                                                </span>
                                            </div>
                                        </t>
                                        <t t-else="">
                                            <t t-if="doc.fal_stock_picking_id.sale_id">
                                                <t t-foreach="doc.fal_stock_picking_id.sale_id" t-as="sale">
                                                    <t t-if="sale.is_final_customer">
                                                        <div class="w-75" style="margin-left: 10px;">
                                                            <span style="font-size:14px;">
                                                                <span t-esc="sale.invoice_street.street if sale.invoice_street else ''"/>
                                                            </span>
                                                        </div>
                                                    </t>
                                                    <t t-else="">
                                                        <div class="w-75" style="margin-left: 10px;">
                                                            <span style="font-size:14px;">
                                                                <div>
                                                                    <span t-esc="doc.partner_id.street if doc.partner_id.street else ''"/>
                                                                </div>
                                                            </span>
                                                        </div>
                                                    </t>
                                                </t>
                                            </t>
                                            <t t-else="">
                                                <div class="w-75" style="margin-left: 10px;">
                                                    <span style="font-size:14px;">
                                                        <div>
                                                            <span t-esc="doc.partner_id.street if doc.partner_id.street else ''"/>
                                                        </div>
                                                    </span>
                                                </div>
                                            </t>
                                        </t>
                                    </div>
                                    <div class="row w-100">
                                        <div style="width: 65px;">
                                            <span style="font-size:14px; margin-left: 20px;">
                                                <b>No. PO</b>
                                            </span>
                                        </div>
                                        <div>
                                            <span style="font-size:14px; margin-left: 20px;">
                                                <b>:</b>
                                            </span>
                                        </div>
                                        <div class="w-75">
                                            <div style="margin-left: 10px;">
                                                <span style="font-size:14px;">
                                                    <span t-esc="doc.ref if doc.ref else ''"/>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div>
                                <table class="table o_report_block_table table-sm">
                                    <thead>
                                        <tr>
                                            <th class="border-top border-bottom border-dark">
                                                <span style="font-size: 14px;">
                                                    No.
                                                </span>
                                            </th>
                                            <th class="border-top border-bottom border-dark o_bold text-center">
                                                <span style="font-size: 14px;">
                                                    Nama Barang
                                                </span>
                                            </th>
                                            <th class="border-top border-bottom border-dark text-right" style="width: 13%;">
                                                <span style="font-size: 14px; margin-right: 20px;">
                                                    Jumlah
                                                </span>
                                            </th>
                                            <th class="border-top border-bottom border-dark">
                                                <span style="font-size: 14px;">
                                                    Unit
                                                </span>
                                            </th>
                                            <th class="border-top border-bottom border-dark text-left" style="width: 10%;">
                                                <span style="font-size: 14px;">
                                                    Harga
                                                </span>
                                            </th>
                                            <th class="border-top border-bottom border-dark text-right">
                                                <span style="white-space:nowrap; font-size: 14px;">
                                                    Disc.(%)
                                                </span>
                                            </th>
                                            <th class="border-top border-bottom border-dark text-center" style="width: 14%;">
                                                <span style="font-size: 14px;">
                                                    Subtotal
                                                </span>
                                            </th>
                                            <th class="border-top border-bottom border-dark text-right" style="width: 7%;">
                                                <span style="font-size: 14px;">
                                                    Pajak
                                                </span>
                                            </th>
                                        </tr>
                                    </thead>
                                    <!-- TBODY -->
                                    <tbody>
                                        <t t-set="i" t-value="0"/>
                                        <tr t-foreach="doc.invoice_line_ids" t-as="invoice">
                                            <t t-set="i" t-value="i+1"/>
                                            <td class="text-center font-size: 14px;">
                                                <span t-esc="i"/>
                                            </td>
                                            <td>
                                                <span style="font-size: 14px;" t-field="invoice.name"/>
                                            </td>
                                            <td class="text-right">
                                                <span style="font-size: 14px; margin-right: 20px;" t-field="invoice.quantity"/>
                                            </td>
                                            <td>
                                                <span style="font-size: 14px;" t-field="invoice.product_uom_id.name"/>
                                            </td>
                                            <td class="text-right">
                                                <span style="font-size: 14px;" t-field="invoice.price_unit"/>
                                            </td>
                                            <td class="text-right">
                                                <span style="font-size: 14px;" t-field="invoice.disc_round"/>
                                            </td>
                                            <td class="text-right" style="font-size: 14px;"> 
                                                Rp. <span t-esc="invoice.price_subtotal" t-options="{'widget': 'float', 'precision': 2}"/>
                                            </td>
                                            <td class="text-right">
                                                <span style="font-size: 14px;" t-field="invoice.tax_ids.description"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                
                                <hr style="background-color: black; width:30%; margin-left: 69%; margin-bottom: 0px; margin-top: 0px;"/>
                                <div>
                                    <div class="row">
                                        <div class="col-8"/>
                                        <div class="col-2 text-left">
                                            <span class="h7 o_bold">Subotal</span>
                                        </div>
                                        <div style="margin-left: 10px;" class="text-right">
                                            : <span t-field="doc.amount_untaxed"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-8"/>
                                        <div class="col-2 text-left">
                                            <span class="h7 o_bold">Taxes</span>
                                        </div>
                                        <div style="margin-left: 10px;" class="text-right">
                                            : <span t-field="doc.amount_tax_signed"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-8"/>
                                        <div class="col-2 text-left">
                                            <span class="h7 o_bold">Total</span>
                                        </div>
                                        <div style="margin-left: 10px;" class="text-right">
                                            : <span t-field="doc.amount_total"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="row" style="margin-top: 0px;">
                                    <div class="col-2">
                                        <span style="font-size: 12px;">
                                            Terbilang
                                        </span>
                                    </div>
                                    <div class="col-1" style="margin-left: -50px;">
                                        <span>
                                            :
                                        </span>
                                    </div>
                                    <div class="col-9" style="margin-left:-60px;">
                                        <span>
                                            <span style="font-size: 12px; text-transform: capitalize;" t-esc="env['account.move'].get_amount_to_text(doc.amount_total)"/> <span style="font-size: 12px;" t-field="doc.currency_id.currency_unit_label"/>
                                        </span>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-6 page-break">
                                        <br/>
                                        <span>
                                            <span>
                                            <b>
                                                <span style="font-size:13px;" t-field="doc.company_id.company_keterangan"/>
                                            </b>
                                            </span>
                                        </span>
                                    </div>
                                    <div class="col-6" style="margin-left: 50px;">
                                        <br/>
                                        <br/>
                                        <br/>
                                        <br/>
                                        <br/>
                                        <br/>
                                        <span style="margin-left:30px"/>
                                        <span t-field="doc.company_id.invoice_ttd" style="margin-left:100px"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </t>
    </template>

    <record id="action_tranindo_invoice_letter_c5" model="ir.actions.report">
        <field name="name">Invoice C5</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">fal_tranindo_ext.tranindo_invoice_letter_c5</field>
        <field name="report_file">fal_tranindo_ext.tranindo_invoice_letter_c5</field>
        <field name="print_report_name">'Invoice Letter C5 - %s' % (object.name)</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
    </record>

    <record id="paperformat_tranindo_invoice_letter_c5_paperformat" model="report.paperformat">
        <field name="name">Invoice C5</field>
        <field name="default" eval="True" />
        <field name="format">custom</field>
        <field name="page_height">139</field>
        <field name="page_width">216</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">24</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">23</field>
        <field name="dpi">90</field>
        <field name="report_ids" eval="[(4, ref('action_tranindo_invoice_letter_c5'))]"/>
    </record>
</odoo>