<odoo>
    <template id="tranindo_vendor_bill_a4">
        <t t-call="web.html_container">
            <t t-name='tranindo_vendor_bill_a4'>
                <t t-call="fal_tranindo_ext.tranindo_custom_header_footer_vendor_bill_a4">
                    <t t-foreach="docs" t-as="doc">
                        <div class="page">
                            <style>
                                .page-break {
                                    page-break-before: always;
                                }
                            </style>
                            <!--  -->
                            
                            <!-- TABLE FOR RECORD -->
                            <div class="row">
                                <div class="w-50">
                                    <div class="row w-100">
                                        <div style="width: 80px;">
                                            <span style="font-size:14px; margin-left: 30px;">
                                                <b>No. Rek</b>
                                            </span>
                                        </div>
                                        <div>
                                            <span style="font-size:14px; margin-left: 83px;">
                                                <b>:</b>
                                            </span>
                                        </div>
                                        <div class="w-50">
                                            <div style="margin-left: 0px;">
                                                <span style="font-size:14px; word-break: break-word;">
                                                    <span style="" t-field="doc.partner_bank_id" class="o_bold"/> - <span style="" t-field="doc.partner_bank_id.acc_holder_name" class="o_bold"/>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div style="width: 80px;">
                                            <span style="font-size:14px; margin-left: 30px;">
                                                <b>Pembayaran</b>
                                            </span>
                                        </div>
                                        <div>
                                            <span style="font-size:14px; margin-left: 83px;">
                                                <b>:</b>
                                            </span>
                                        </div>
                                        <div style="width: 62%;" class="">
                                            <span style="font-size:14px;" t-field="doc.payment_reference" class="o_bold"/>
                                        </div>
                                    </div>
                                    <div class="row w-100">
                                        <div style="width: 80px;">
                                            <span style="font-size:14px; margin-left: 30px;">
                                                <b>Email</b>
                                            </span>
                                        </div>
                                        <div>
                                            <span style="font-size:14px; margin-left: 83px;">
                                                <b>:</b>
                                            </span>
                                        </div>
                                        <div class="">
                                            <div style="margin-left: 0px;">
                                                <span style="font-size:14px;">
                                                    <span style="word-break: break-word;" t-field="doc.partner_id.email" class="o_bold"/>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!--  -->
                                <div class="w-50">
                                    <div class="row w-100">
                                        <div class="w-25">
                                            <span style="font-size:14px; margin-left: 20px;">
                                                <b>No. Bill</b>
                                            </span>
                                        </div>
                                        <div class="w-75">
                                            <span style="margin-left: 20px;">
                                                : <span t-field="doc.name" class="o_bold"/>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="row w-100">
                                        <div class="w-25">
                                            <span style="font-size:14px; margin-left: 20px;">
                                                <b>Tanggal</b>
                                            </span>
                                        </div>
                                        <div class="w-75">
                                            <span style="margin-left: 20px;">
                                                : <span t-esc="doc.invoice_date.strftime('%d %b %Y')" class="o_bold"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div style="margin-top: 10px;">
                                <table class="table o_report_block_table table-sm">
                                    <thead>
                                        <tr>
                                            <th class="border-bottom border-top border-black">
                                                <span style="font-size: 14px;">
                                                    No.
                                                </span>
                                            </th>
                                            <th class="border-bottom border-top border-black o_bold text-center">
                                                <span style="font-size: 14px;">
                                                    Keterangan
                                                </span>
                                            </th>
                                            <th class="border-bottom border-top border-black text-right">
                                                <span style="font-size: 14px; margin-right: 30px;">
                                                    Jumlah
                                                </span>
                                            </th>
                                            <th class="border-bottom border-top border-black">
                                                <span style="font-size: 14px;">
                                                    Unit
                                                </span>
                                            </th>
                                            <th class="border-bottom border-top border-black text-center" colspan="3">
                                                <span style="font-size: 14px;">
                                                    Harga
                                                </span>
                                            </th>
                                            <th class="border-bottom border-top border-blacks text-center" colspan="3">
                                                <span style="font-size: 14px;">
                                                    Subtotal
                                                </span>
                                            </th>
                                        </tr>
                                    </thead>
                                    <!-- TBODY -->
                                    <tbody>
                                        <t t-set="i" t-value="0"/>
                                        <tr t-foreach="doc.invoice_line_ids" t-as="invoice">
                                            <t t-set="i" t-value="i+1"/>
                                            <td class="text-center">
                                                <span style="font-size: 14px;" t-esc="i" class="h5"/>
                                            </td>
                                            <td>
                                                <span style="font-size: 14px;" t-field="invoice.name"/>
                                            </td>
                                            <td class="text-right">
                                                <span style="margin-right: 28px; font-size: 14px;" t-field="invoice.quantity"/>
                                            </td>
                                            <td>
                                                <span style="font-size: 14px;" t-field="invoice.product_uom_id.name"/>
                                            </td>
                                            <td class="text-right">
                                                <td class="text-left"> 
                                                    Rp.
                                                </td>
                                                <td class="text-right"> 
                                                    <span style="font-size: 14px;" t-esc="invoice.price_unit" t-options="{'widget': 'float', 'precision': 0}"/>
                                                </td>
                                            </td>
                                            <td class="text-right"> 
                                                <td class="text-left"> 
                                                    Rp.
                                                </td>
                                                <td class="text-right"> 
                                                    <span style="font-size: 14px;" t-esc="invoice.price_subtotal" t-options="{'widget': 'float', 'precision': 0}"/>
                                                </td>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th class="border-bottom-0 border-top-0 border-black">
                                                <!-- <span style="font-size: 14px;">
                                                    No.
                                                </span> -->
                                            </th>
                                            <th class="border-bottom-0 border-top-0 border-black o_bold text-center">
                                                <!-- <span style="font-size: 14px;">
                                                    Keterangan
                                                </span> -->
                                            </th>
                                            <th class="border-bottom-0 border-top-0 border-black text-right">
                                                <!-- <span style="font-size: 14px; margin-right: 30px;">
                                                    Jumlah
                                                </span> -->
                                            </th>
                                            <th class="border-bottom-0 border-top-0 border-black">
                                                <!-- <span style="font-size: 14px;">
                                                    Unit
                                                </span> -->
                                            </th>
                                            <th class="border-bottom-0 border-top border-dark text-right" colspan="3">
                                                <span class="h7 o_bold">
                                                    Total : 
                                                </span>
                                            </th>
                                            <th class="border-bottom-0 border-top border-dark text-right" colspan="3">
                                                <span style="margin-left: 40px;" t-field="doc.amount_total"/>
                                            </th>
                                        </tr>
                                    </tbody>
                                </table>
                                <div class="pt-1"/>

                                <div class="margin-top: 30px;">
                                    Note : <span style="font-size: 14px;" t-raw="doc.narration"/>
                                </div>
                                
                                <div style="margin-top: 25px; margin-left: 60px; page-break-inside: avoid;" class="">
                                    <div class="row">
                                        <div class="col-3">
                                            <span>
                                                <strong style="font-size: 14px;">
                                                    Mengetahui
                                                </strong>
                                                <br/>
                                                <br/>
                                                <br/>
                                                <span>
                                                    <hr style="background-color: black; width:70%"/>
                                                </span>
                                                <!-- <span>
                                                    <u/>
                                                </span> -->
                                            </span>
                                        </div>
                                        <div class="col-3">
                                            <span>
                                                <strong style="font-size: 14px;">
                                                    Menyetujui
                                                </strong>
                                                <br/>
                                                <br/>
                                                <br/>
                                                <span>
                                                    <hr style="background-color: black; width:70%"/>
                                                </span>
                                                <!-- <span>
                                                    <u/>
                                                </span> -->
                                            </span>
                                        </div>
                                        <div class="col-3">
                                            <span>
                                                <strong style="font-size: 14px;">Kasir</strong>
                                                <br/>
                                                <br/>
                                                <br/>
                                                <span>
                                                    <hr style="background-color: black; width:70%"/>
                                                </span>
                                            </span>
                                        </div>
                                        <div class="col-3">
                                            <span>
                                                <strong style="font-size: 14px;">Pembukuan</strong>
                                                <br/>
                                                <br/>
                                                <br/>
                                                <span>
                                                    <hr style="background-color: black; width:70%"/>
                                                </span>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </t>
    </template>

    <record id="action_tranindo_vendor_bill_a4" model="ir.actions.report">
        <field name="name">Vendor Bills A4</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">fal_tranindo_ext.tranindo_vendor_bill_a4</field>
        <field name="report_file">fal_tranindo_ext.tranindo_vendor_bill_a4</field>
        <field name="print_report_name">'Vendor Bills A4 - %s' % (object.name)</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
    </record>

    <record id="paperformat_tranindo_vendor_bill_a4" model="report.paperformat">
        <field name="name">Vendor Bills A4</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">20</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">19</field>
        <field name="dpi">90</field>
        <field name="report_ids" eval="[(4, ref('action_tranindo_vendor_bill_a4'))]"/>
    </record>
</odoo>